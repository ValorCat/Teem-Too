   <Label fx:id="currentValue" alignment="CENTER" layoutX="96.0" layoutY="86.0" text="0" textAlignment="CENTER"
          textFill="#805c7e" textOverrun="CLIP" AnchorPane.bottomAnchor="65.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
      <font>
         <Font size="60.0"/>
      </font>
   </Label>
   <Button fx:id="addCaloriesButton" contentDisplay="TEXT_ONLY" focusTraversable="false" graphicTextGap="0.0"
           layoutX="126.0" layoutY="74.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" mnemonicParsing="false" onAction="#addCalories" prefHeight="40.0" text="+10"
           textFill="#686767" wrapText="true" AnchorPane.bottomAnchor="90.0" AnchorPane.rightAnchor="10.0">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
      <font>
         <Font size="17.0"/>
      </font>
   </Button>
   <Slider fx:id="addCalorieSlider" blockIncrement="1.0" focusTraversable="false" layoutX="13.0" layoutY="60.0"
           majorTickUnit="1.0" max="2.0" minorTickCount="0" orientation="VERTICAL" prefHeight="125.0" prefWidth="21.0"
           snapToTicks="true" value="1.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="10.0">
      <cursor>
         <Cursor fx:constant="V_RESIZE"/>
      </cursor>
   </Slider>
   <Button fx:id="sleepButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" graphicTextGap="0.0"
           layoutX="126.0" layoutY="74.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" mnemonicParsing="false" onAction="#toggleSleepMode" prefHeight="50.0" prefWidth="50.0"
           text="S" wrapText="true" AnchorPane.bottomAnchor="-2.0" AnchorPane.rightAnchor="-2.0">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
      <font>
         <Font name="System Bold" size="22.0"/>
      </font>
   </Button>
   <ListView fx:id="stats" focusTraversable="false" layoutY="47.0" maxHeight="-Infinity" minHeight="-Infinity"
